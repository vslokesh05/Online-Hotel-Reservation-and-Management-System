@model IEnumerable<WebApplication1.Models.AccountLogin>

@{
    ViewBag.Title = "Login";
}

<style>
    body {
        margin-top: 100px;
        padding-top: 100px;
        background-image: url('../../Content/image/LoginPIC.jpg');
        background-size: cover;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Adjust as needed */
    }

    .card {
        width: 400px; /* Adjust width as needed */
        background-color: rgba(0, 0, 0, 0.7); /* Black with moderate transparency */
        color: white; /* Text color */
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .btn-group .btn {
            margin-right: 10px;
            background-color: #007bff; /* Button color */
            color: white; /* Text color */
            border: none; /* Remove default border */
            padding: 10px 20px; /* Adjust padding */
            font-size: 16px; /* Adjust font size */
            border-radius: 5px; /* Rounded corners */
            box-shadow: 0 4px #0056b3; /* 3D shadow effect */
            transition: all 0.1s ease-in-out; /* Smooth transition */
        }

            .btn-group .btn:active {
                box-shadow: 0 2px #0056b3; /* Reduce shadow on click */
                transform: translateY(2px); /* Push button down on click */
            }

            .btn-group .btn:hover {
                background-color: #0056b3; /* Darken on hover */
            }

    #UserLoginForm,
    #AdminLoginForm {
        display: none;
    }

    footer {
        text-align: center;
        padding: 10px;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Login</h3>

            <div class="btn-group" data-toggle="buttons">
                <label class="btn">
                    <input type="radio" name="role" id="UserRadio" value="user"> User
                </label>
                <label class="btn">
                    <input type="radio" name="role" id="AdminRadio" value="admin"> Admin
                </label>
            </div>

            <div id="UserLoginForm">
                @Html.Partial("UserLogin")
            </div>

            <div id="AdminLoginForm">
                @Html.Partial("AdminLogin")
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('input[type=radio][name=role]').change(function () {
                if (this.value === 'user') {
                    $('#UserLoginForm').show();
                    $('#AdminLoginForm').hide();
                } else if (this.value === 'admin') {
                    $('#AdminLoginForm').show();
                    $('#UserLoginForm').hide();
                }
            });
        });
    </script>
}
